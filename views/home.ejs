    </footer>
</body>

<script>
    let isDragging = false;
    let startY = 0;

    const header = document.getElementById('themeHeader');

    header.addEventListener('mousedown', (e) => {
    isDragging = true;
    startY = e.clientY;
    });

    window.addEventListener('mouseup', () => {
        isDragging = false;
    });

    window.addEventListener('mousemove', (e) => {
        if (isDragging && e.clientY - startY > 100) {
            // ถือว่าดึงเพียงพอแล้ว
            isDragging = false;

            // เพิ่ม animation ถ้าต้องการ
            document.body.classList.toggle('theme-expanded');
            // หรือดึง header ลงมาแบบคลุมหน้า
            setTimeout(() => {
                document.body.classList.remove('theme-expanded');
            }, 500);
            
            // สลับธีม
            document.body.classList.toggle('dark-theme');
            document.body.classList.toggle('light-theme');
        }
    });
</script>